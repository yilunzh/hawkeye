<p id="notice"><%= notice %></p>


<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
      <p>
        <strong>Total Frames:</strong>
        <%= @product.total_frames %>
      </p>
    </div>
    <div class="col-md-3">
      <p>
        <strong>File Extension:</strong>
        <%= @product.file_extension %>
      </p>
      <p>
        <strong>Display Width:</strong>
        <%= @product.display_width %>
      </p>
      <p>
        <strong>Display Height:</strong>
        <%= @product.display_height %>
      </p>
    </div>
    <div class="col-md-3">
      <p class="attribute">
        <strong>Embed:</strong>
        <%= @iframe %>
      </p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-default" %>
      <%= link_to 'Preview', preview_product_path(@product), class: "btn btn-default" %>
      <%= link_to 'Delete', product_path(@product), data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-default' %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10 col-md-offset-1" id="display_box">
      <%= @iframe.html_safe %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <%= image_tag "https://s3-us-west-2.amazonaws.com/#{ENV['S3_BUCKET']}/uploads/product/images/#{@product.id}/display_1#{@product.file_extension}", class: "edit_image", id: "canvas", crossorigin: "anonymous" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 col-md-offset-1">
      <form id="silderInput">   
        <output name="brightnessOutput" id="brightnessOutputId">Brightness: 0</output>
        <input id="brightness" name="brightness" type="range" min="0" max="100" value="0">

        <output name="contrastOutput" id="contrastOutputId">Contrast: 0</output>
        <input id="contrast" name="contrast" type="range" min="-20" max="20" value="0">

        <output name="saturationOutput" id="saturationOutputId">Saturation: 0</output>
        <input id="saturation" name="saturation" type="range" min="-100" max="100" value="0">

        <output name="vibranceOutput" id="vibranceOutputId">Vibrance: 0</output>
        <input id="vibrance" name="vibrance" type="range" min="-20" max="20" value="0">

        <output name="exposureOutput" id="exposureOutputId">Exposure: 0</output>
        <input id="exposure" name="exposure" type="range" min="-20" max="20" value="0">
      </form>

    </div>
  </div>

</div>

